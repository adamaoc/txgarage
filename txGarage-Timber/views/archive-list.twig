{% set category = function('pageCatClass', wp_title) %}
{% set instaBG =  '/theme_images/hero-insta-bg.png' %}
<div class="post-hero--wrap post-hero--wrap-{{category}}" style="background-image: url({{theme.path}}/{{instaBG}})">
	<div class="post-hero__title">
		<h1>{{ wp_title }}</h1>
	</div>
	<div class="post-hero__bg-cover"></div>
</div>

<section class="post-list--expanded limit-wrapper">
{% for post in posts %}
  {% set category = function('catClass', post.categories) %}
  {% include "tz-archive.twig" %}
{% endfor %}
{% include "components/pagination.twig" %}
</section>
