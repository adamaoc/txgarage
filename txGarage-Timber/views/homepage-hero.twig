{% set hero = hero[0] %}
{% set category = function('catClass', hero.categories) %}
{% set instaBG =  '/theme_images/Optimized-hero-insta-bg.png' %}
<!-- Christmas Theme... -->
<style>
  .homepage-hero {
    border-bottom: 33px solid #AF2125;
    border-image-source: url(http://txgarage.com/images/2015/12/christmas_tree.png);
    border-image-slice: 79 6;
    border-image-repeat: round;
    border-top: 0;
    border-left: 0;
    border-right: 0;
  }
  .homepage-hero__bg-cover {
    background-color: rgba(24, 86, 9, 0.6);
  }
</style>
<div class="homepage-hero" style="background-image: url({{theme.path}}/{{instaBG}})">
  <section class="homepage-hero__wrap">

    <div class="homepage-hero__img-wrap {{category}}" style="background-image: url({{hero.thumbnail.src}});">
      <div class="aspectbox"></div>
      <div class="cat-tab">
        {% include "components/cat-icons.twig" %}
      </div>
    </div><div class="homepage-hero__content-card {{category}}">
      <div class="homepage-hero__content-card__topbox">
        <h2>{{hero.get_title}}</h2>
        <div class="homepage-hero__content-card__meta">
          <svg class="icon icon-user"><use xlink:href="#icon-user"></use></svg>
          by {{hero.get_author}}</div>
      </div>
      <div class="homepage-hero__content-card__excerpt">
        <p>{{ hero.get_preview(35) }}</p>
        <a href="{{hero.get_path}}" rel="bookmark" class="readmorebtn" title="Permanent Link to {{hero.get_title}}">Read More</a>
      </div>
    </div>

  </section>
  <div class="homepage-hero__bg-cover"></div>
</div>
